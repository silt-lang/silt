module bool where

data Bool : Type where
  false : Bool
  true : Bool

_&&_ : Bool -> Bool -> Bool
true && x = x
false && _ = false

_||_ : Bool -> Bool -> Bool
true || _ = true
false || x = x

!_ : Bool -> Bool
! true = false
! false = true

-- complex : Bool -> Bool -> Bool
-- complex x y = (x && y) || ((! x) || (! y))

data AnimalKind : Type where
  cat : AnimalKind
  dog : AnimalKind
  bird : AnimalKind
  lizard : AnimalKind
  human : AnimalKind

otherAnimal : AnimalKind -> AnimalKind
otherAnimal cat = dog
otherAnimal dog = bird
otherAnimal bird = cat
otherAnimal lizard = human
otherAnimal human = lizard